apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rest-creditscore
  labels:
    run: rest-creditscore
    commit: ${WERCKER_GIT_COMMIT}
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        run: rest-creditscore
    spec:
      containers:
      - image: wcr.io/${WERCKER_APPLICATION_OWNER_NAME}/creditscoreapp:${WERCKER_GIT_BRANCH}-${WERCKER_GIT_COMMIT}
        imagePullPolicy: Always
        name: rest-creditscore
        ports:
        - containerPort: 8080
          protocol: TCP
      imagePullSecrets:
      - name: wrelease
      restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: rest-creditscore-svc
spec:
  selector:
    run: rest-creditscore
    commit: ${WERCKER_GIT_COMMIT}
  ports:
    - port: 8088
      targetPort: 8080
  type: ClusterIP
